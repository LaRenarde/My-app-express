<h1> Express App : {{title}}</h1>
<br />
    <select name="users" id="user">
        {{!-- //Utilisation du helper pour faire une selection des données à afficher en fonction de paramètres. --}}

        {{#compare data null operator= "=="}}
        <option value="rien">Il n'y a pas de données dans la base users</option>
        {{else}}
        <option value="0">Selectionner un utilisateur</option>
        {{#each data}}
        <option value="{{this.id}}">{{this.name}}  {{this.firstName}} - {{this.country.name}} {{this.country.code}} </option>
        {{/each}}
        {{/compare}}
    </select>
    <h2>or</h2><br />

    <button id="newUser">Créer un nouvel utilisateur</button>


    <script>
        var usr = document.getElementById('user');
        usr.addEventListener('change', function (evt) {
            window.location = "/formUser/" + usr.value;
        });
        var btn_new = document.getElementById('newUser');
        btn_new.addEventListener('click', function (evt) {
            window.location = "/newUser";
        });
    </script>